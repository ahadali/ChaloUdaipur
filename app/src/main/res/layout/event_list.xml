<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dimen_340"
    android:layout_height="@dimen/dimen_120"
    android:layout_margin="@dimen/dimen_10"
    android:clickable="false"
    android:focusable="false"
    android:foreground="?android:attr/selectableItemBackground"
    cardview:cardCornerRadius="@dimen/dimen_7">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/event_image"
            android:layout_width="@dimen/dimen_86"
            android:layout_height="@dimen/dimen_96"
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_marginStart="@dimen/dimen_10"
            android:layout_marginTop="@dimen/dimen_10"
            android:src="@drawable/udaipur_main"
            app:civ_border_color="#FF000000"
            app:civ_border_width="@dimen/dimen_2" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/event_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_10"
                android:layout_marginLeft="@dimen/dimen_20"
                android:layout_marginStart="@dimen/dimen_15"
                android:layout_marginTop="@dimen/dimen_20"
                android:textColor="@android:color/black"
                android:textSize="@dimen/textSize_15"
                tools:text="Shilpgram Mahotsav" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/paid_and_free"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_20"
                    android:layout_marginStart="@dimen/dimen_20"
                    android:text="@string/paid"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="@dimen/textSize_15" />

                <Button
                    android:id="@+id/register_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_15"
                    android:layout_marginStart="@dimen/dimen_15"
                    android:layout_marginTop="@dimen/dimen_3"
                    android:background="@drawable/register_button"
                    android:text="@string/register"
                    android:textColor="#009688"
                    android:textSize="@dimen/textSize_15"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen_20"
            android:layout_marginRight="@dimen/dimen_20">

            <Button
                android:id="@+id/like_button"
                android:layout_width="@dimen/dimen_22"
                android:layout_height="@dimen/dimen_22"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dimen_22"
                android:background="@drawable/ic_favorite_black_24dp"
                android:backgroundTint="@android:color/holo_red_dark" />

            <Button
                android:id="@+id/share_button"
                android:layout_width="@dimen/dimen_22"
                android:layout_height="@dimen/dimen_22"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dimen_60"
                android:background="@drawable/ic_share_black_24dp" />


        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
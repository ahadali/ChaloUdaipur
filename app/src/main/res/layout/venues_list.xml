<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dimen_340"
    android:layout_height="@dimen/dimen_290"
    android:layout_margin="@dimen/dimen_10"
    android:clickable="false"
    android:focusable="false"
    android:foreground="?android:attr/selectableItemBackground"
    cardview:cardCornerRadius="@dimen/dimen_5">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/venue_img_id"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_240"
            android:contentDescription="@string/todo"
            android:scaleType="centerCrop"
            tools:background="#2d2d" />

        <Button
            android:id="@+id/venue_info_button"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_30"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/dimen_10"
            android:layout_marginEnd="@dimen/dimen_5"
            android:layout_marginRight="@dimen/dimen_5"
            android:background="@drawable/get_info_button"
            android:text="@string/get_info"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/venue_name_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/venue_img_id"
            android:gravity="center"
            android:textAllCaps="true"
            android:textColor="#000000"
            android:textSize="@dimen/textSize_13"
            tools:text="Place" />


    </RelativeLayout>


</android.support.v7.widget.CardView>